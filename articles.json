---
---
{% capture json_content %}
[
  {% assign first_post = true %}
  {% for post in site.posts %}
  {% if first_post %}
  {% assign first_post = false %}
  {% else %}
  ,
  {% endif %}

  {
    "title": "{{ post.title | url_encode }}",
    "date": "{{ post.date | date: "%Y/%m/%d" }}",
    "url": "{{ post.url }}",
    "tags": [
      {% assign first_tag = true %}
      {% for tag in post.tags %}
      {% if first_tag %}
      {% assign first_tag = false %}
      {% else %}
      ,
      {% endif %}
      "{{ tag | url_encode }}"
      {% endfor %}
    ],
    "summary": "{{ post.content | strip_html | truncate: 200 | url_encode }}"
  }
  {% endfor %}
]{% endcapture %}{{ json_content | remove: " " | strip_newlines }}
